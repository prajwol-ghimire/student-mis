                <div class="text-center">
                  <h3><i class="fa fa-lock fa-4x"></i></h3>
                  <h2 class="text-center">Forgot Password?</h2>
                  <p>You can reset your password here.</p>
                  <div class="panel-body">
    
                    <form method="POST" action="/reset_password">
    
                      <div class="form-group">
                        <div class="input-group">
                          <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                          <input type="email" id="email" name="user_email" placeholder="email address" class="form-control"  type="email">
                      </div>
                        <br>
                        <span><input type="text" class="form-control" readonly id="capt" >
                         <input id="email" name="email" placeholder="Enter Captcha" class="form-control"  type="text"></span>
                      <h6>Regenerate Captcha<img src="assets/img/refresh.jpg" width="40px" onclick="cap()"></h6>          
                      </div>

                      {{#if error500}}      
                    <span style="color: rgb(172, 128, 255)(94, 26, 26);">Error:500 Please re-try a bit later</span>
                          {{/if}}
                        {{#if nosuchuser}}      
                            <span style="color: red;">Please Enter Valid Email</span>
                          {{/if}}
                        {{#if hasbeensent}}      
                        <span style="color: yellowgreen;">Reset link has been to your mail address</span>
                        {{else}}
                          <div class="form-group">
                              <button class="btn btn-lg btn-primary btn-block">Submit</button>
                          </div>
                        {{/if}}
                      

                      
                      <input type="hidden" class="hide" name="token" id="token" value=""> 
                    </form>
    
                  </div>
                </div>
              </div>
            </div>
          </div>
	</div>
</div>


